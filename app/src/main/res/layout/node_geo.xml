<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLatitude"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/editLatitude"
        app:layout_constraintLeft_toRightOf="@+id/textLatitude"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:hint="48.855800" />

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLongitude"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/textLatitude"
        app:layout_constraintLeft_toLeftOf="@+id/textLatitude" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editLongitude"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editLatitude"
        app:layout_constraintLeft_toLeftOf="@+id/editLatitude"
        android:hint="2.358570" />

    <Button
        android:text="My Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPosition"
        app:layout_constraintLeft_toLeftOf="@+id/textLongitude"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textLongitude" />

    <TextView
        android:text="SMGeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

</android.support.constraint.ConstraintLayout>